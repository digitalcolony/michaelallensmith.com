---
import "../styles/paper.min.css";
import "../styles/styles.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	description: string;
	url: string;
	robots?: string;
}

const { title, description, url, robots } = Astro.props;
const canonicalUrl = `https://michaelallensmith.com${url}`;
const siteOGImage = `${canonicalUrl}/images/mas-bike.jpg`;

const defaultRobots = "index, follow";
const robotsMeta = robots ? robots : defaultRobots;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content={robotsMeta} />
		<link rel="canonical" href={canonicalUrl} />
		<meta property="og:title" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:image" content={siteOGImage} />
		<meta property="og:image:type" content="image/jpeg" />
		<meta property="og:image:width" content="453" />
		<meta property="og:image:height" content="450" />
		<meta property="og:image:alt" content="Young Michael on a bike." />
		<title>{title}</title>
	</head>
	<body>
		<Navigation url={url} title={title} />
		<slot />

		<Footer />
	</body>
</html>
